<div class="container concerts-list text-light">
<p id="notice"><%= notice %></p>

<table class="table table-index">
  <thead>
    <tr>
      <td><strong>Name:</strong></td>
      <td><%= @band.name %></td>
    </tr>

    <tr>
      <td><strong>Kind:</strong></td>
      <td><%= @band.kind %></td>
    </tr>

    <tr>
      <td><strong>Start date:</strong></td>
      <td><%= @band.start_date %></td>
    </tr>

  </tbody>
</table>

<% if @band.concerts.present? %>
  <ul>
    <% @band.concerts.each do |concert| %>
      <li><%= link_to concert.location, band_concert_path(@band, concert) %> </li>
    <% end %>
  </ul>
<% end %>

  <%= link_to 'Edit', edit_band_path(@band), class: 'btn m-5 text-light' %>
  <%= link_to 'Back', bands_path, class: 'btn m-5 text-light' %>
</div>
<p id="notice"><%= notice %></p>

<h1 class="text-center mt-5 mb-2">Bands</h1>

<table class="table table-index">
  <thead>
    <tr>
      <th>Name</th>
      <th>Kind</th>
      <th>Start date</th>
      <th>Band Concerts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.name %></td>
        <td><%= band.kind %></td>
        <td><%= band.start_date %></td>
        <td><%= band.concerts.count %></td>
        <td><%= link_to 'Show', band, class: 'btn' %></td>
        <td><%= link_to 'Edit', edit_band_path(band), class: 'btn' %></td>
        <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="text-center">
  <%= link_to 'New Band', new_band_path, class: 'btn m-5 text-light'  %>
</div>

<p id="notice"><%= notice %></p>

<h1 class="text-center mt-5 mb-2">Concerts</h1>

<table class="table table-index">
  <thead>
    <tr>
      <th>Location</th>
      <th>Date</th>
      <th>Quantity</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concerts.each do |concert| %>
      <tr>
        <td><%= concert.location %></td>
        <td><%= concert.date %></td>
        <td><%= concert.quantity %></td>
        <td><%= concert.duration %></td>
        <td><%= link_to 'Show', band_concert_path(@band, concert), class: 'btn' %></td>
        <td><%= link_to 'Edit', edit_band_concert_path(@band, concert), class: 'btn' %></td>
        <td><%= link_to 'Destroy', band_concert_path(@band, concert), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="text-center"> 
  <%= link_to 'New Concert', new_band_concert_path(@band), class: 'btn m-5 text-light' %>
</div>
